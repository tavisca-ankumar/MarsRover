pipeline {
    agent any
    parameters{
        string(name: 'DOCKER_USERNAME', description: "Enter username")
        password(name: 'DOCKER_PASSWORD', description: "Enter password")
    }
     stages {
        stage('Build') {
            steps {
               sh script: '''
               chmod 777 ./gradlew
               ./gradlew build
               ''',
               label: "Building Project"
            }
        }
        stage('Test')
        {
            steps {
                sh script: '''
                ./gradlew test
                ''',
                label: "Testing Project"
            }
        }
        stage('Static Code Analysis')
        {
            steps {
                sh script: '''
                ./gradlew sonarqube
                ''',
                label: "Running Sonarqube Scan"
            }
        }
        stage('Build DockerImage')
        {
            steps {
            sh script: '''
                docker build . -t "my-new-rover"
                docker run my-new-rover
                ''',
                label: "Building Docker Image"
            }
        }
        stage('Publish DockerImage')
        {
            steps {
            sh script: '''
                docker login -u=%DOCKER_USERNAME% -p=%DOCKER_PASSWORD%
                docker tag my-new-rover anoop2677/my-rover:latest
                docker push anoop2677/my-rover:latest
                ''',
                label: "Publishing Docker Image"
            }
        }
    }
    post{
        always{
            sh script:'''
            docker logout
            '''
            deleteDir()
        }
    }
}
