pipeline {
    agent any
     stages {
        stage('Build') {
            steps {
               sh script: '''
               chmod 777 ./gradlew
               ./gradlew build
               ''',
               label: "Building Project"
            }
        }
        stage('Test')
        {
            steps {
                sh script: '''
                ./gradlew test
                ''',
                label: "Testing Project"
            }
        }
        stage('Build DockerImage')
        {
            steps {
            sh script: '''
                docker build . -t "my-new-rover"
                docker run my-new-rover
                ''',
                label: "Building Docker Image"
            }
        }
        stage('Publish DockerImage')
        {
            steps {
            sh script: '''
                docker login -u=anoop2677 -p=0@noopkum@r
                docker tag my-new-rover anoop2677/my-rover:latest
                docker push anoop2677/my-rover:latest
                ''',
                label: "Publishing Docker Image"
            }
        }
    }
    post{
        always{
            sh script:'''
            docker logout
            '''
            deleteDir()
        }
    }
}
