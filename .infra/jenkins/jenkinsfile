pipeline {
    agent any
    parameters{
        string(name: 'DOCKER_USERNAME')
        string(name: 'DOCKER_PASSWORD')
        
    }
    stages {
        stage('Build') {
            steps {
               bat 'gradlew.bat clean build'
            }
        }
        stage('Test')
        {
            steps {
                bat 'gradlew.bat test'
            }
        }
        stage('Build DockerImage')
        {
            steps {
            powershell '''
                docker build . -t "my-new-rover"
                docker run my-new-rover
                '''
            }
        }
        stage('Publish DockerImage')
        {
            steps {
            powershell '''
                docker tag my-new-rover anoop2677/my-rover:latest
                docker push anoop2677/my-rover:latest
                '''
            }
        }
    }
    post{
        always{
            deleteDir()
        }
    }
}
