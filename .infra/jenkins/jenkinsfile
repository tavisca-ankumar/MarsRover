pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
               bat 'gradlew.bat clean build'
            }
        }
        stage('Test')
        {
            steps {
                gradlew.bat test
            }
        }
        stage('Static Code Analysis')
        {
           
        }
        stage('Build DockerImage')
        {
            steps {
                docker build . -t "my-new-rover"
                docker run my-new-rover
            }
        }
        stage('Publish DockerImage')
        {
            steps {
                docker tag my-new-rover:latest anoop2677/my-rover:latest
                docker push anoop2677/my-rover:latest
            }
        }
    }
    post{
        always{
            deleteDir()
        }
    }
}
